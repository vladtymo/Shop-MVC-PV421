@model Animal

<h1>Додати нову тварину</h1>

@* <div asp-validation-summary="All"></div> *@

<form class="row g-3" asp-action="Create" method="post">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label">Ім'я тварини</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Введіть ім'я тварини">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Age" class="form-label">Вік (років)</label>
        <input asp-for="Age" min="0" max="30" step="1" type="number" class="form-control" placeholder="Вік">
        <span asp-validation-for="Age" class="small text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Gender" class="form-label">Стать</label>
        <select asp-for="Gender" class="form-select">
            <option value="Самець">Самець</option>
            <option value="Самка">Самка</option>
            <option value="Невідомо">Невідомо</option>
        </select>
        <span asp-validation-for="Gender" class="small text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label">Категорія</label>
        <select asp-for="CategoryId" class="form-select">
            <option value="">Оберіть категорію</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Status" class="form-label">Статус</label>
        <select asp-for="Status" class="form-select">
            <option value="Доступний">Доступний</option>
            <option value="Зарезервований">Зарезервований</option>
            <option value="Прийнятий">Прийнятий</option>
        </select>
        <span asp-validation-for="Status" class="small text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="ImageUrl" class="form-label">URL фото</label>
        <input asp-for="ImageUrl" type="url" class="form-control" placeholder="Введіть URL фото">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Description" class="form-label">Опис</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Опишіть тварину, її характер, особливості догляду"></textarea>
        <span asp-validation-for="Description" class="small text-danger"></span>
    </div>
   
    <div class="col-6">
        <a asp-action="Index" class="btn btn-dark w-100">Назад</a>
    </div>
    <div class="col-6">
        <button type="submit" class="btn btn-success w-100">Додати</button>
    </div>
</form>